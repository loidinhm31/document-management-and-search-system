{
  "analysis": {
    "analyzer": {
      "vietnamese_analyzer": {
        "type": "custom",
        "tokenizer": "standard",
        "filter": [
          "lowercase",
          "vietnamese_stop",
          "asciifolding",
          "vietnamese_word_delimiter"
        ]
      },
      "universal_analyzer": {
        "type": "custom",
        "tokenizer": "icu_tokenizer",
        "filter": [
          "lowercase",
          "icu_folding",
          "icu_normalizer"
        ]
      },
      "korean_analyzer": {
        "type": "custom",
        "tokenizer": "nori_tokenizer",
        "filter": [
          "lowercase",
          "nori_part_of_speech",
          "nori_readingform"
        ]
      },
      "filename_analyzer": {
        "type": "custom",
        "tokenizer": "standard",
        "filter": [
          "lowercase",
          "asciifolding"
        ]
      }
    },
    "normalizer": {
      "lowercase_normalizer": {
        "type": "custom",
        "filter": ["lowercase", "asciifolding"]
      }
    },
    "tokenizer": {
      "nori_tokenizer": {
        "type": "nori_tokenizer",
        "decompound_mode": "mixed",
        "discard_punctuation": true
      }
    },
    "filter": {
      "vietnamese_stop": {
        "type": "stop",
        "stopwords": [
          "và", "của", "có", "được", "trong", "đã", "là", "lúc", "với", "theo", "tới", "về", "làm", "để", "từ", "những", "hay", "khi", "sau", "như", "trên", "vào", "phải", "bị", "cho", "đến", "nếu", "tại", "nhưng", "mà", "thì", "hoặc", "vẫn", "bởi", "này", "các", "nhiều", "thêm", "vừa", "cũng", "nên", "việc", "nói", "nhất", "đều", "theo", "cùng", "đang", "chỉ", "vì", "còn", "giữa", "thuộc", "quá", "sẽ"
        ]
      },
      "vietnamese_word_delimiter": {
        "type": "word_delimiter_graph",
        "preserve_original": true,
        "catenate_words": true,
        "generate_word_parts": true,
        "generate_number_parts": true,
        "catenate_numbers": true,
        "split_on_case_change": true,
        "split_on_numerics": true,
        "stem_english_possessive": false
      },
      "nori_part_of_speech": {
        "type": "nori_part_of_speech",
        "stoptags": [
          "E", "IC", "J", "MAG", "MAJ", "MM", "SP", "SSC", "SSO", "SC", "SE", "XPN", "XSA", "XSN", "XSV", "UNA", "NA", "VSV"
        ]
      },
      "nori_readingform": {
        "type": "nori_readingform"
      },
      "icu_normalizer": {
        "type": "icu_normalizer",
        "name": "nfc",
        "mode": "compose"
      },
      "icu_folding": {
        "type": "icu_folding"
      }
    }
  }
}