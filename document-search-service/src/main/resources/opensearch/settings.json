{
  "analysis": {
    "analyzer": {
      "vietnamese_analyzer": {
        "type": "custom",
        "tokenizer": "standard",
        "filter": [
          "lowercase",
          "asciifolding",
          "vietnamese_stop",
          "vietnamese_word_delimiter"
        ]
      },
      "filename_analyzer": {
        "type": "custom",
        "tokenizer": "standard",
        "filter": [
          "lowercase",
          "asciifolding"
        ]
      }
    },
    "normalizer": {
      "lowercase_normalizer": {
        "type": "custom",
        "filter": ["lowercase", "asciifolding"]
      }
    },
    "filter": {
      "vietnamese_stop": {
        "type": "stop",
        "stopwords": [
          "và",
          "của",
          "có",
          "được",
          "trong",
          "đã",
          "là",
          "lúc",
          "với",
          "theo",
          "tới",
          "về",
          "làm",
          "để",
          "từ",
          "những",
          "hay",
          "khi",
          "sau",
          "như",
          "trên",
          "vào",
          "phải",
          "bị",
          "cho",
          "đến",
          "nếu",
          "tại",
          "nhưng",
          "mà",
          "thì",
          "hoặc",
          "vẫn",
          "bởi",
          "này",
          "các",
          "nhiều",
          "thêm",
          "vừa",
          "cũng",
          "nên",
          "việc",
          "nói",
          "nhất",
          "đều",
          "theo",
          "cùng",
          "đang",
          "chỉ",
          "vì",
          "còn",
          "giữa",
          "thuộc",
          "quá",
          "sẽ"
        ]
      },
      "vietnamese_word_delimiter": {
        "type": "word_delimiter_graph",
        "preserve_original": true,
        "catenate_words": true,
        "generate_word_parts": true,
        "generate_number_parts": true,
        "catenate_numbers": true,
        "split_on_case_change": true,
        "split_on_numerics": true,
        "stem_english_possessive": false
      }
    }
  }
}